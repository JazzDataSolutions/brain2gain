# =============================================================================
# Brain2Gain Production Environment
# CRITICAL: Replace all placeholder values with real production credentials
# =============================================================================

# ─── ENVIRONMENT ───────────────────────────────────────────────────────────
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ─── DOMAIN & SECURITY ─────────────────────────────────────────────────────
DOMAIN=brain2gain.com
SECRET_KEY=CHANGE-ME-TO-SECURE-RANDOM-STRING-MIN-32-CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ─── DATABASE (PostgreSQL) ─────────────────────────────────────────────────
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=brain2gain_prod
POSTGRES_USER=brain2gain_prod
POSTGRES_PASSWORD=CHANGE-ME-TO-SECURE-PASSWORD

# ─── CACHE (Redis) ──────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE-ME-TO-SECURE-REDIS-PASSWORD

# ─── FIRST SUPERUSER ────────────────────────────────────────────────────────
FIRST_SUPERUSER=admin@brain2gain.com
FIRST_SUPERUSER_PASSWORD=CHANGE-ME-TO-SECURE-ADMIN-PASSWORD

# ─── CORS & FRONTEND ────────────────────────────────────────────────────────
BACKEND_CORS_ORIGINS=["https://brain2gain.com","https://www.brain2gain.com","https://admin.brain2gain.com"]
FRONTEND_HOST=https://brain2gain.com
BACKEND_URL=https://api.brain2gain.com
FRONTEND_PORT=80

# ─── EMAIL SERVICE ─────────────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@brain2gain.com
SMTP_PASSWORD=CHANGE-ME-TO-EMAIL-PASSWORD
EMAILS_FROM_EMAIL=noreply@brain2gain.com
SMTP_TLS=true

# ─── PAYMENT GATEWAYS (Production keys) ────────────────────────────────────
# Stripe Live Keys - NEVER commit these to version control!
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME_TO_REAL_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_CHANGE_ME_TO_REAL_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME_TO_REAL_STRIPE_WEBHOOK_SECRET

# PayPal Live
PAYPAL_CLIENT_ID=CHANGE_ME_TO_REAL_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=CHANGE_ME_TO_REAL_PAYPAL_CLIENT_SECRET
PAYPAL_MODE=live

# ─── MONITORING & OBSERVABILITY ────────────────────────────────────────────
SENTRY_DSN=https://CHANGE_ME@sentry.io/project-id
FRONTEND_SENTRY_DSN=https://CHANGE_ME@sentry.io/frontend-project-id
PROMETHEUS_METRICS_ENABLED=true

# ─── DOCKER CONFIGURATION ──────────────────────────────────────────────────
DOCKER_IMAGE_BACKEND=brain2gain/backend
DOCKER_IMAGE_FRONTEND=brain2gain/frontend
TAG=latest

# ─── MONITORING STACK ──────────────────────────────────────────────────────
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE-ME-TO-SECURE-GRAFANA-PASSWORD

# ─── SSL/TLS CONFIGURATION ─────────────────────────────────────────────────
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/brain2gain.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/brain2gain.com.key

# ─── SECURITY & RATE LIMITING ──────────────────────────────────────────────
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ─── FILE UPLOAD ───────────────────────────────────────────────────────────
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=jpg,jpeg,png,gif,pdf

# ─── BUSINESS CONFIGURATION ────────────────────────────────────────────────
DEFAULT_CURRENCY=MXN
TAX_RATE=0.16
FREE_SHIPPING_THRESHOLD=1000.00
ORDER_EXPIRY_MINUTES=15

# ─── BACKUP CONFIGURATION ──────────────────────────────────────────────────
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# ─── ANALYTICS & TRACKING ──────────────────────────────────────────────────
GOOGLE_ANALYTICS_ID=CHANGE-ME-TO-REAL-GA-ID
FACEBOOK_PIXEL_ID=CHANGE-ME-TO-REAL-FB-PIXEL-ID
GOOGLE_TAG_MANAGER_ID=CHANGE-ME-TO-REAL-GTM-ID

# ─── EXTERNAL SERVICES ─────────────────────────────────────────────────────
# WhatsApp Business API
WHATSAPP_TOKEN=CHANGE-ME-TO-REAL-WHATSAPP-TOKEN
WHATSAPP_PHONE_NUMBER_ID=CHANGE-ME-TO-REAL-PHONE-NUMBER-ID

# SendGrid (Production email service)
SENDGRID_API_KEY=CHANGE-ME-TO-REAL-SENDGRID-API-KEY

# AWS S3 (Production file storage)
AWS_ACCESS_KEY_ID=CHANGE-ME-TO-REAL-AWS-ACCESS-KEY
AWS_SECRET_ACCESS_KEY=CHANGE-ME-TO-REAL-AWS-SECRET-KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=brain2gain-production-assets

# ─── PRODUCTION OPTIMIZATIONS ──────────────────────────────────────────────
VITE_HOT_RELOAD=false
FASTAPI_RELOAD=false