# ============================================================================
# Environment Variables - Admin Mode (Solo ERP/Admin)
# Configuración específica para el panel administrativo
# ============================================================================

# Configuración del Modo
API_MODE=admin
ENABLE_ADMIN_ROUTES=true
ENABLE_STORE_ROUTES=false
REQUIRE_ADMIN_AUTH=true

# Base de Datos - Admin
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=brain2gain_admin
POSTGRES_USER=brain2gain_admin
POSTGRES_PASSWORD=AdminSecurePass2025!

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=RedisAdminPass2025!

# Seguridad
SECRET_KEY=admin-secret-key-super-secure-2025-brain2gain-erp
ENVIRONMENT=production

# CORS para Admin
ADMIN_CORS_ORIGINS=http://localhost:3001,https://admin.brain2gain.com

# API URLs
ADMIN_API_URL=http://localhost:8001
VITE_API_URL=http://localhost:8001

# Frontend Configuration
VITE_APP_MODE=admin
VITE_ENABLE_ADMIN=true
VITE_ENABLE_STORE=false
VITE_APP_NAME=Brain2Gain Admin
VITE_REQUIRE_AUTH=true
VITE_SESSION_TIMEOUT=3600
VITE_ENABLE_ANALYTICS=true

# Usuario Administrador Inicial
FIRST_SUPERUSER=admin@brain2gain.com
FIRST_SUPERUSER_PASSWORD=AdminPassword2025!

# Rate Limiting - Admin específico
RATE_LIMIT_ADMIN=300/minute
RATE_LIMIT_REPORTS=50/minute
RATE_LIMIT_BULK_OPERATIONS=20/minute

# Puertos
ADMIN_PORT=3001
ADMIN_API_PORT=8001
ADMINER_PORT=8080

# Dominios
ADMIN_DOMAIN=admin.brain2gain.com
ADMINER_DOMAIN=db.brain2gain.com

# Configuraciones de Seguridad Adicionales
ADMIN_SESSION_TIMEOUT=3600
ENABLE_AUDIT_LOG=true
REQUIRE_2FA=false

# Email Configuration
EMAILS_FROM_EMAIL=admin@brain2gain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@brain2gain.com
SMTP_PASSWORD=...

# Analytics
ADMIN_ANALYTICS_ID=GA-ADMIN-789123

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=brain2gain-backups

# Logging
LOG_LEVEL=DEBUG
ENABLE_ACCESS_LOG=true
ENABLE_AUDIT_LOG=true

# Worker Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Monitoring
SENTRY_DSN=https://...@sentry.io/...
ENABLE_METRICS=true
METRICS_PORT=9090