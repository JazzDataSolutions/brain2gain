# =============================================================================
# Brain2Gain Local Development Environment
# Optimized for local development with minimal external dependencies
# =============================================================================

# ─── ENVIRONMENT ───────────────────────────────────────────────────────────
ENVIRONMENT=local
DEBUG=true
LOG_LEVEL=DEBUG

# ─── DOMAIN & SECURITY ─────────────────────────────────────────────────────
DOMAIN=localhost
SECRET_KEY=local-dev-secret-key-not-for-production-use-only
ACCESS_TOKEN_EXPIRE_MINUTES=120

# ─── DATABASE (PostgreSQL) ─────────────────────────────────────────────────
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=brain2gain_local
POSTGRES_USER=brain2gain_local
POSTGRES_PASSWORD=LocalPassword123!

# ─── CACHE (Redis) ──────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=LocalRedisPass123!

# ─── FIRST SUPERUSER ────────────────────────────────────────────────────────
FIRST_SUPERUSER=admin@brain2gain.local
FIRST_SUPERUSER_PASSWORD=admin123

# ─── CORS & FRONTEND ────────────────────────────────────────────────────────
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173","http://localhost:3000","http://localhost:8080"]
FRONTEND_HOST=http://localhost:5173
BACKEND_URL=http://localhost:8000
FRONTEND_PORT=5173

# ─── EMAIL SERVICE (MailCatcher for local development) ────────────────────
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@brain2gain.local
SMTP_TLS=false

# ─── PAYMENT GATEWAYS (Test keys) ──────────────────────────────────────────
# Stripe Test Keys
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdefghijklmnop
STRIPE_SECRET_KEY=sk_test_51234567890abcdefghijklmnop
STRIPE_WEBHOOK_SECRET=whsec_test_1234567890abcdefghijklmnop

# PayPal Sandbox
PAYPAL_CLIENT_ID=test_paypal_client_id
PAYPAL_CLIENT_SECRET=test_paypal_client_secret
PAYPAL_MODE=sandbox

# ─── MONITORING & OBSERVABILITY ────────────────────────────────────────────
SENTRY_DSN=
FRONTEND_SENTRY_DSN=
PROMETHEUS_METRICS_ENABLED=false

# ─── DOCKER CONFIGURATION ──────────────────────────────────────────────────
DOCKER_IMAGE_BACKEND=brain2gain/backend
DOCKER_IMAGE_FRONTEND=brain2gain/frontend
TAG=local

# ─── DEVELOPMENT SETTINGS ──────────────────────────────────────────────────
RATE_LIMIT_ENABLED=false
BACKUP_ENABLED=false
SSL_ENABLED=false

# ─── BUSINESS CONFIGURATION ────────────────────────────────────────────────
DEFAULT_CURRENCY=MXN
TAX_RATE=0.16
FREE_SHIPPING_THRESHOLD=500.00
ORDER_EXPIRY_MINUTES=30

# ─── DEVELOPMENT TOOLS ─────────────────────────────────────────────────────
MAILCATCHER_HOST=localhost
MAILCATCHER_PORT=1080
VITE_HOT_RELOAD=true
FASTAPI_RELOAD=true
ADMINER_PORT=8080