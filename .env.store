# ============================================================================
# Environment Variables - Store Mode (Solo Tienda)
# Configuración específica para el frontend público de e-commerce
# ============================================================================

# Configuración del Modo
API_MODE=public
ENABLE_ADMIN_ROUTES=false
ENABLE_STORE_ROUTES=true

# Base de Datos - Store
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=brain2gain_store
POSTGRES_USER=brain2gain_user
POSTGRES_PASSWORD=StoreSecurePass2025!

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=RedisStorePass2025!

# Seguridad
SECRET_KEY=store-secret-key-super-secure-2025-brain2gain
ENVIRONMENT=production

# CORS para Store
STORE_CORS_ORIGINS=http://localhost:3000,https://store.brain2gain.com,https://www.brain2gain.com

# API URLs
STORE_API_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000

# Frontend Configuration
VITE_APP_MODE=store
VITE_ENABLE_ADMIN=false
VITE_ENABLE_STORE=true
VITE_APP_NAME=Brain2Gain Store
VITE_PAYMENT_ENABLED=true

# Rate Limiting - Store específico
RATE_LIMIT_STORE=100/minute
RATE_LIMIT_CART=50/minute
RATE_LIMIT_CHECKOUT=10/hour

# Puertos
STORE_PORT=3000
STORE_API_PORT=8000

# Dominios
STORE_DOMAIN=store.brain2gain.com

# Analytics
STORE_ANALYTICS_ID=GA-STORE-123456

# Payment Gateway
STRIPE_PUBLISHABLE_KEY=pk_test_...
PAYPAL_CLIENT_ID=...

# Email - Solo para notificaciones de pedidos
EMAILS_FROM_EMAIL=orders@brain2gain.com
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=...

# Logging
LOG_LEVEL=INFO
ENABLE_ACCESS_LOG=true